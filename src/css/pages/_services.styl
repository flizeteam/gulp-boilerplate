.page--services
  background rgba(0,0,0,0.8)
  padding-bottom 0
.services__box
  width 100%
  max-width 960px
  margin 0 auto
  +above(8)
    padding 10px
    height 300px



.service__image
  width 100%
  height 200px
  +above(8)
    size 200px
    border-radius 50%
    background-size cover
    float left

.services__text
  color white
  float right
  font-size 18px
  text-align center
  padding 10px 20px
  background-color rgba(0,0,0,0.6)
  width 100%

  +above(8)
    background-color rgba(0,0,0,0)
    padding 60px 0
    width 70%
    text-align left

.content--services
  +above(8)
    border-top 1px solid rgba(255,255,255,0.6)
    padding-top 80px
