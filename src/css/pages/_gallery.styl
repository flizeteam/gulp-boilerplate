.content--white
  background-color white

.slide__img
  width 100%
  min-height 80vh
  background-size cover
  +above(6)
    min-height 60vh
  +above(8)
    border 20px solid white
    border-radius 50px
.page--gallery
  padding-bottom 0

.gallery__block
  width 100%
  +above(8)
    col(1/2, cycle: 2)

.gallery__description
  text-align center
  font-size 20px
  color main-color
  padding 20px 0
  font-weight 200
  +above(8)
    text-align right
    padding 25vh 0
    margin-right 20px
    font-size 36px

.cycle-slide
  width 100%
