.content--white
  background-color white

.slide__img
  col(1/2)
  height 100px
  background-size cover
  border 4px solid white
  transition opacity 2s
  +above(8)
    col(1/4)
    height 200px
  &:hover
    opacity 0.5

.page--gallery
  padding-bottom 0
  min-height 100vh

.gallery__description
  text-align center
  font-size 20px
  color main-color
  padding 20px 0
  font-weight 200
  +above(8)
    text-align right
    padding 25vh 0
    margin-right 20px
    font-size 36px

.gallery--content
  min-height 80vh
  +above(6)
    padding 20px

.malonebox
  ablock()
